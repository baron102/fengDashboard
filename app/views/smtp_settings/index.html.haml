= content_for :action_buttons do
  = link_to new_smtp_setting_path, class: 'uk-button uk-button-default' do
    %i{'uk-icon': 'plus'}
    New Smtp Setting

%table.uk-table.uk-table-responsive.uk-table-divider
  %thead
    %tr
      %th Provider
      %th Address
      %th Port
      %th Username
      %th
      %th
      %th

  %tbody
    - @smtp_settings.each do |smtp_setting|
      %tr
        %td= smtp_setting.provider
        %td= smtp_setting.address
        %td= smtp_setting.port
        %td= smtp_setting.username
        %td= link_to 'Show', smtp_setting, class: 'uk-button-text'
        %td= link_to 'Edit', edit_smtp_setting_path(smtp_setting), class: 'uk-button-text'
        %td= link_to 'Destroy', smtp_setting, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button-text'
