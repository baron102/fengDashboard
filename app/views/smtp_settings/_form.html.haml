.uk-card.uk-card-default.uk-card-body
  = simple_form_for(@smtp_setting) do |f|
    = f.error_notification

    .uk-margin
      = f.input :provider, input_html: { class: 'uk-input' }
    .uk-margin
      = f.input :address, input_html: { class: 'uk-input' }
    .uk-margin
      = f.input :port, input_html: { class: 'uk-input' }
    .uk-margin
      = f.input :username, input_html: { class: 'uk-input' }
    .uk-margin
      = f.input :password, input_html: { class: 'uk-input' }

    .form-actions
      = f.submit 'Save', class: 'uk-button uk-button-primary'
