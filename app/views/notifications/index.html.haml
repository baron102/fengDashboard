%table.uk-table.uk-table-responsive.uk-table-divider
  %thead
    %tr
      %th Name
      %th Is Active
      %th{:colspan => "3"}
  %tbody
    - @notifications.each do |notification|
      %tr
        %td= notification.name
        %td
          %span.uk-label{class: "uk-label-#{notification.email_deliver.is_active ? 'success' : 'danger'}"}
            = notification.email_deliver.is_active ? 'yes' : 'no'
        %td= link_to 'Details', notification
        %td= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Notification', new_notification_path
